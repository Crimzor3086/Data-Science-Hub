{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run vercel-build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "api/hello.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/hello",
      "dest": "api/hello.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 